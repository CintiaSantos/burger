<h1 class="text-center">Eat-Da-Burger!</h1>


<div class="container">
    <div class="row">
        <div class="col md-6">
            <h2>Burgers to be Eaten</h2>
            {{#each burgers}} {{#unless this.devoured}} {{this.burger_name}}
            <button class="devoured" data-id="{{id}}">Devour it!</button>
            {{/unless}} {{/each}}
        </div>

        <div class="col md-6">
            <h2>Burgers not yet Eaten</h2>
            {{#each burgers}} {{#if this.devoured}}
            <div class='burgerEaten'>
                <div>
                    {{this.burger_name}}
                </div>
            </div>
            {{/if}} {{/each}}
        </div>
    </div>
</div>


<div class="row my-5">
    <div class="col text-center">
        <form class="burger-form justify-content-center">

            <div class="form-group">
                <input type="text" id="burger" name="burger_name" placeholder="Add a Burger">
            </div>

            <button type="submit">Submit</button>
        </form>
    </div>
    

</div>
<div>
        <p class="text-center">Enter a burger you want to eat and click the 'Submit' button</p>
    </div>